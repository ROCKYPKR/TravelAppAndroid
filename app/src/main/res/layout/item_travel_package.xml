<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/package_card_size"
    android:layout_height="@dimen/package_card_size"
    android:background="@color/colorDivider"
    android:layout_margin="@dimen/margin_padding_size_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv__package"
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_package_thumb"
            app:srcCompat="@mipmap/package_placeholder"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/package_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="PoonHill Trek"
            android:layout_gravity="center"
            style="@style/primaryTextMedium"
            android:layout_margin="@dimen/margin_padding_size_small"/>

    </LinearLayout>

</android.support.v7.widget.CardView>